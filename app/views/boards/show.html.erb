<section class="mt-16 min-h-screen">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @board %>

    <%= link_to 'Edit this board', edit_board_path(@board), class: "button" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this board', board_path(@board), method: :delete, class: "button" %>
    </div>
    <%= link_to 'Back to boards', boards_path, class: "button" %>
  </div>
</section>
