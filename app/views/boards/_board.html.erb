<% if action_name == "index"  %>
  <a id="<%= dom_id board %>" 
    href="<%= board_path(board) %>" 
    data-id="<%= board.id %>"
    data-title="<%= board.title %>" 
    data-description="<%= board.description %>"
    class="block p-4 duration-150 hover:py-8 border-l-4 border-neutral-700 mb-4 bg-gradient-to-r from-gray-900 to-orange-900 opacity-30 hover:opacity-100 group"
  >

    <p class="<%= "text-sm group-hover:text-2xl group-hover:mb-2 duration-200 group font-medium js-board-title-#{board.id}" %>">
      <%= board.title %>
    </p>

    <p class="<%= "text-base group-hover:text-lg js-board-description-#{board.id}" %>">
      <%= board.description %>
    </p>
  </a>
<% else %>
  <div id="<%= dom_id board %>" 
    class="p-4 border-l-4 border-neutral-700 mb-4 bg-gradient-to-r from-gray-900 to-orange-900 opacity-100 space-y-4 lg:flex lg:space-y-0 items-center justify-between"
  >
    <div class="aaa">
      <p class="<%= "text-sm duration-200 group font-medium js-board-title-#{board.id}" %>">
        <%= board.title %>
      </p>

      <p class="<%= "text-base js-board-description-#{board.id}" %>">
        <%= board.description %>
      </p>
    </div>

    <div class="inline-flex flex-wrap gap-2">
      <%= link_to 'Edit this board', edit_board_path(@board), class: "button text-xs rounded-full border-gray-400 text-gray-400" %>

      <div class="inline-block">
        <%= button_to 'Destroy this board', board_path(@board), method: :delete, class: "button text-xs rounded-full border-gray-400 text-gray-400 text-left" %>
      </div>

      <%= link_to 'Back to boards', boards_path, class: "button text-xs rounded-full border-gray-400 text-gray-400" %>
    </div>
  </div>
<% end %>
