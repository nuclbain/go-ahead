<header class="bg-black text-white h-16 flex items-center justify-between absolute top-0 w-full">
  <%= link_to "GoAhead", root_path, class: "text-lg text-gray-100 font-bold" %>

  <nav class="flex space-x-4">    
    <% if current_user %>
      <%= link_to "Profile", user_path(current_user), class: "duration-200 hover:text-gray-300" %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "duration-200 hover:text-gray-300" %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "duration-200 hover:text-gray-300" %>
      <%= link_to "Log in", new_user_session_path, class: "duration-200 hover:text-gray-300" %>
    <% end %>
  </nav>
</header>
